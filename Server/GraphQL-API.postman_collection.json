	"item": [
		{
			"name": "Get All Products",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"query\": \"query { products { id name description price createdAt } }\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/graphql",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"graphql"
					]
				}
			}
		},
		{
			"name": "Get Product by ID",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"query\": \"query($id: Int!) { product(id: $id) { id name description price createdAt } }\",\n  \"variables\": {\n    \"id\": 1\n  }\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/graphql",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"graphql"
					]
				}
			}
		},
		{
			"name": "Search Products",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"query\": \"query($search: String) { products(search: $search) { id name description price createdAt } }\",\n  \"variables\": {\n    \"search\": \"laptop\"\n  }\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/graphql",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"graphql"
					]
				}
			}
		},
		{
			"name": "Create Product",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"query\": \"mutation($product: ProductInput!) { createProduct(product: $product) { id name description price createdAt } }\",\n  \"variables\": {\n    \"product\": {\n      \"name\": \"Gaming Laptop\",\n      \"description\": \"High-performance gaming laptop\",\n      \"price\": 1299.99\n    }\n  }\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/graphql",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"graphql"
					]
				}
			}
		},
		{
			"name": "Update Product",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"query\": \"mutation($id: Int!, $product: ProductInput!) { updateProduct(id: $id, product: $product) { id name description price createdAt } }\",\n  \"variables\": {\n    \"id\": 1,\n    \"product\": {\n      \"name\": \"Updated Gaming Laptop\",\n      \"description\": \"Updated high-performance gaming laptop\",\n      \"price\": 1399.99\n    }\n  }\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/graphql",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"graphql"
					]
				}
			}
		},
		{
			"name": "Delete Product",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"query\": \"mutation($id: Int!) { deleteProduct(id: $id) }\",\n  \"variables\": {\n    \"id\": 1\n  }\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/graphql",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"graphql"
					]
				}
			}
		}
	],
